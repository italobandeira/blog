<!-- Page Header-->
<header class="masthead" style="background-image: url('https://images.unsplash.com/photo-1542435503-956c469947f6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8YmxvZ3xlbnwwfHwwfHx8MA%3D%3D&w=1000&q=80')">
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="site-heading">
            <h1>Simple Blog</h1>
            <span class="subheading">Less is more</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content-->
<div class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <!-- Post preview-->
      <% @articles.each do |article| %>
          <div class="post-preview">
              <h2><%= link_to article.title, article, class: 'post-title' %></h2>
              <p class="post-meta">
                  Posted by
                  <a href="#!">Ruby Blog</a>
                  on <%= article.created_at.strftime("%d/%m/%Y") %>
              </p>
          </div>
          <!-- Divider-->
          <hr class="my-4" />
      <% end %>

      <!-- Pager-->
      <div class="d-flex justify-content-end mb-4">
        <%= link_to "New Article", new_article_path, class: "btn btn-primary text-uppercase" %>
        <!-- <a class="btn btn-primary text-uppercase" href="#!" style="margin-left: 3%;">Older Posts â†’</a> -->
      </div>
    </div>
  </div>
</div>
